{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "module": "esnext",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types/", "./types"]
  },
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*",
    "./src/**/*.spec.ts",
    "./webpack.config.ts"
  ]
}
